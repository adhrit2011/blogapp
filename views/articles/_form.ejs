<div class="form-group mb-4">
    <label for="title">Title</label>
    <input type="text" id="title" name="title" autocomplete="off" required class="form-control" value="<%=article.title%>">
</div>

<div class="form-group mb-4">
    <label for="description">Description</label>
    <textarea name="description" id="description" class="form-control"><%=article.description%></textarea>
</div>
<div class="form-group mb-4">
    <label for="markdown">Mark Down</label>
    <textarea name="markdown" id="markdown" class="form-control" required><%=article.markdown%></textarea>
</div>
<a href="/" class="btn btn-warning">Cancel</a>
<button class="btn btn-primary" type="submit">Save</button>